{% extends "layout.html.j2" %} 
{% block title %}  ISGS Margins
{% endblock %}

{% block css %}  
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='node_modules/datatables.net-dt/css/jquery.dataTables.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='node_modules/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.1.2/css/fixedHeader.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/searchpanes/2.0.0/css/searchPanes.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.3.4/css/select.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.dataTables.min.css" />
    <link href="https://cdn.datatables.net/fixedheader/3.1.5/css/fixedHeader.dataTables.min.css" rel="stylesheet"/>
    <link href="{{ url_for('static', filename='Css/entVsSchIndex.css') }}" rel="stylesheet" type="text/css" />
{% endblock %} 
{% block content %}
    <div class="row mt-5 " id="topRowId">
        <div class="col-md-3 offset-md-2">
            <label for="targetDate"> Date</label>
            <input type="date" name="targetDate" id="targetDate" />
        </div>

        
        <div class="col-md-2">
            <label for="state">State</label>
            <select id="state"
                    name="state"
                    class="box"> 
                <option value="MSEB_State">Maharashtra</option>
                <option value="GEB_State">Gujarat</option>
                <option value="MP_State">MP</option>
                <option value="CSEB_State">Chatt</option>
            </select>
        </div>
        

        
        <div class="col-md-2">
            <label for="genType">Type</label>
            <select id="genType"
                    name="genType"
                   class="box" > 
                <option value="thermalGenList">Thermal</option>
                <option value="gasGenList">Gas</option>
                
            </select>
        </div>
        

        <div class="col-md-1">
            <button type="button" class="btn btn-primary btn-lg" id="submitBtn">
                Submit
            </button>
        </div>
        <div class="col-md-2">
            <a href="{{url_for('index')}}" class="btn btn-success btn-lg">Back To Home</a>
        </div>
    </div>
    <div class="row mt-5 ">
        <div class="col-md-1 offset-md-9">
                <button id = "tblIcon" style='font-size:18px;' class="btn btn-outline-success" > Table <i class="fas fa-solid fa-table" style='font-size:32px;color:green'></i></button>
        </div>
        <div class="col-md-1">
            <button id = "chartIcon"style='font-size:18px; ' class="btn btn-outline-warning"> Chart <i class='fas fa-chart-area' style='font-size:32px;color:orange'></i></button>
        </div>
        <div class="col-md-1">
            <button id = "stackedBarIcon"style='font-size:18px;' class="btn btn-outline-info"> Bar-Chart <i class='fas fa-chart-area' style='font-size:32px;color:orange'></i></button>
        </div>
    </div>
    
    <br>

    <div id = "revNoDiv"></div>
    
    <div id="tableSection">
        <div id="errorTableDiv"></div>
        <div id="tableSpinner"></div>
        <div id="tableWrapper"></div>
    </div>
    <div id="plotSection">
        <div id="errorPlotDiv"></div>
        <div id="plotSpinner"></div>
        <div id="plotsWrapper"></div>
    </div>
    <div id="stackedBarSection">
        <div id="stackedBarErrorPlotDiv"></div>
        <div id="stackedBarPlotSpinner"></div>
        <div id="stackedBarPlotsWrapper"></div>
    </div>

{% endblock %}
{%block scripts%}
    <script src="{{ url_for('static', filename='dist/entVsSch.js') }}"></script>
    <script src="{{ url_for('static', filename='node_modules/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ url_for('static', filename='node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net-buttons/js/buttons.flash.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net-buttons/js/buttons.html5.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/datatables.net-buttons/js/buttons.print.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/jszip/dist/jszip.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/pdfmake/build/pdfmake.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='node_modules/pdfmake/build/vfs_fonts.js') }}"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.2/js/dataTables.fixedHeader.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/searchpanes/2.0.0/js/dataTables.searchPanes.min.js"></script>
{% endblock %}